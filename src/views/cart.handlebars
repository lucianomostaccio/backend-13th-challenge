<!-- cart.handlebars -->

<section class="profileSection">
  <ul class="userProfile" id="products-home">
    <li class="profileItem">{{first_name}}</li>
  </ul>
</section>

<h1 class="pageTitle">Products in cart</h1>

<ul class="productList">
  {{#each productsInCart}}
    <li class="productTitle">
      {{title}} - ${{price}}
      <form class="removeFromCartButton" action="/products/{{_id}}/remove-from-cart" method="POST">
        <button type="submit">Remove from Cart</button>
      </form>
    </li>
  {{/each}}
</ul>

<script src="/js/cart.js"></script>